{
  "compilerOptions": {
    "target": "ES2015", // "ES3" (default), "ES5", "ES6"/"ES2015", "ES2016", "ES2017" or "ESNext".
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["es2018", "DOM"],
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
